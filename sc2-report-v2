#metadata <- read.table("amplicon_coverage_07-21_metadata.tsv", sep = "\t",header = TRUE)  
#amplicons <- read.table("amplicon_coverage_2022-07-21.txt", header = TRUE)

#Reading in multiple 4.1 batches

#metadata_4.1primers <- read.table("primer4.1_batches_samples.tsv", sep = "\t", header = TRUE)

b24895 <- read.table("amplicon_coverage_2022-07-21_24895.txt",header = TRUE)
b24947 <- read.table("amplicon_coverage_2022-08-01_24947.txt",header = TRUE)
b24774 <- read.table("amplicon_coverage_2022-07-19_24774.txt",header = TRUE)
b24602 <- read.table("amplicon_coverage_2022-07-19_24602.txt",header = TRUE)
b24600 <- read.table("amplicon_coverage_2022-07-19-245600.txt",header = TRUE)
b24599 <- read.table("amplicon_coverage_2022-07-19_24599.txt",header = TRUE)
b24770 <- read.table("amplicon_coverage_2022-07-19_24770.txt",header = TRUE)

ll_24895 <- b24895 %>% 
  mutate(primer_num = as.numeric(sub("nCoV19_","",primer)), .before = primer) %>%
  select(-primer) %>% 
  gather("sequence","reads",2:94) %>%
  mutate(sequence = sub("X", "", sequence, fixed = TRUE))
ll_24947 <- b24947 %>% 
  mutate(primer_num = as.numeric(sub("nCoV19_","",primer)), .before = primer) %>%
  select(-primer) %>% 
  gather("sequence","reads",2:92) %>%
  mutate(sequence = sub("X", "", sequence, fixed = TRUE))
ll_24774 <- b24774 %>% 
  mutate(primer_num = as.numeric(sub("nCoV19_","",primer)), .before = primer) %>%
  select(-primer) %>% 
  gather("sequence","reads",2:93) %>%
  mutate(sequence = sub("X", "", sequence, fixed = TRUE))
ll_24602 <- b24602 %>% 
  mutate(primer_num = as.numeric(sub("nCoV19_","",primer)), .before = primer) %>%
  select(-primer) %>% 
  gather("sequence","reads",2:94) %>%
  mutate(sequence = sub("X", "", sequence, fixed = TRUE))
ll_24600 <- b24600 %>% 
  mutate(primer_num = as.numeric(sub("nCoV19_","",primer)), .before = primer) %>%
  select(-primer) %>% 
  gather("sequence","reads",2:94) %>%
  mutate(sequence = sub("X", "", sequence, fixed = TRUE))
ll_24599 <- b24599 %>% 
