Current_Run_Controls <- runresults %>% filter(entity.sample_id %like% c('NTC') | entity.sample_id%like% c("NEG")) %>% filter(analysis_date==max(analysis_date)) %>% mutate(Limit = case_when(entity.sample_id %like% "HSC" ~ "100",
